{
  "name": "smilesync-backend",
  "version": "1.0.0",
  "description": "SmileSync Backend - Node.js Express server for dental clinic management",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint **/*.js --fix",
    "format": "prettier --write **/*.js",
    "db:migrate": "node database/migrate.js",
    "db:seed": "node database/seed.js",
    "db:reset": "node database/reset.js",
    "build:exe": "node -e \"require('fs').mkdirSync('dist',{recursive:true})\" && pkg index.js --targets node18-win-x64 --output dist/smilesync-backend.exe"
  },
  "keywords": [
    "dental",
    "clinic",
    "backend",
    "api",
    "express",
    "sqlite"
  ],
  "author": "SmileSync Solutions",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "pkg": "^5.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "pkg": {
    "assets": [
      "database/schema.sql"
    ]
  }
}
